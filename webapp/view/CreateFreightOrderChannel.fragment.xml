<core:FragmentDefinition xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f">

    <Dialog id="channelDialog" title="➕ Create New Freight Order" class="sapUiResponsivePadding--content" draggable="true" resizable="true" contentWidth="720px">
        <form:SimpleForm class="productPanel productYellow sapUiSmallMarginTop" backgroundDesign="Transparent" layout="ColumnLayout" columnsM="2" columnsL="2" columnsXL="2">
            <Label required="true" text="Company (Business Unit)"></Label>
            <ComboBox id="companyCB" selectionChange=".onSelectionChange">
                <items>
                    <core:Item key="SCC" text="SCC"/>
                    <core:Item key="SCA" text="SCA"/>
                    <core:Item key="SPL" text="SPL"/>
                </items>
            </ComboBox>
            <Label required="true" text="Product Type"/>
            <ComboBox id="productCB" enabled="false" selectionChange=".onSelectionChange">

                <items>
                    <core:Item enabled="false" key="LPG" text="LPG — Liquefied Petroleum Gas"/>
                    <core:Item enabled="false" key="CHEM" text="Chem — Chemical Transport"/>
                    <core:Item enabled="false" key="FUEL" text="Fuel — Fuel Distribution"/>
                    <core:Item enabled="false" key="NGV" text="NGV — Natural Gas Vehicles"/>
                    <core:Item enabled="false" key="CAR" text="Car — Car Carrier"/>
                    <core:Item enabled="false" key="CONT" text="Container — Container Transport"/>
                </items>
            </ComboBox>

        </form:SimpleForm>
        <VBox  id="channelFlex" visible="false">
            <HBox id="channelRequired" visible="true" class="sapUiSmallMarginTop">
                <Text text="Available Intake Channels for : "></Text>
                <Title text="{ChannelSelectionModel>/company} / {ChannelSelectionModel>/product}"></Title>
            </HBox>

            <FlexBox wrap="Wrap" justifyContent="Center" alignItems="Stretch" class="sapUiSmallMarginTop">

                <!-- PDF / OCR -->
                <GenericTile id="tilePdf" header="PDF / OCR Upload" visible="false" subheader="Upload PDF, scan &amp; extract"  press=".onPdfUploadPress" class="channelTile">
                    <TileContent>
                        <ImageContent src="sap-icon://document-text" />
                    </TileContent>
                </GenericTile>
                <!-- Standard form-->
                <GenericTile id="tileStandardForm" header="Standard Form" visible="false" subheader="Customer fills online form" press=".onManualEntryFreight" class="channelTile">
                    <TileContent>
                        <ImageContent src="sap-icon://write-new-document" />
                    </TileContent>
                </GenericTile>
                 <!-- Line Message-->
                <GenericTile id="tileLineMessage" header="Line Message" visible="false" subheader="Import fron LINE chat" press=".onPdfUploadPress" class="channelTile">
                    <TileContent>
                        <ImageContent src="sap-icon://tag-cloud-chart" />
                    </TileContent>
                </GenericTile>
                <!-- Email RPA -->
                <GenericTile id="tileEmail" header="Email RPA" visible="false" subheader="fetch from email inbox" press=".onPdfUploadPress" class="channelTile">
                    <TileContent>
                        <ImageContent src="sap-icon://email" />
                    </TileContent>
                </GenericTile>

                <!-- TMS API -->
                <GenericTile id="tileTms" header="TMS API" visible="false" subheader="Fetch from transport system" press=".onPdfUploadPress" class="channelTile">
                    <TileContent>
                        <ImageContent src="sap-icon://chain-link" />
                    </TileContent>
                </GenericTile>

                <!-- Manual Entry -->
                <GenericTile id="tileManual" header="Manual Entry" visible="false" subheader="Phone / walk-in orders" press=".onManualEntryFreight" class="channelTile">
                    <TileContent>
                        <ImageContent src="sap-icon://edit" />
                    </TileContent>
                </GenericTile>

                <!-- Excel Batch -->
                <GenericTile id="tileExcel" header="Excel Batch" visible="false" subheader="Batch Calling sheet / BFPL format" press=".onPdfUploadPress" class="channelTile">
                    <TileContent>
                        <ImageContent src="sap-icon://excel-attachment" />
                    </TileContent>
                </GenericTile>

                <!-- Forecast Upload -->
                <GenericTile id="tileForecast" header="Forecast Upload" visible="false" subheader="NPM Coastal vessel plan" press=".onPdfUploadPress" class="channelTile">
                    <TileContent>
                        <ImageContent src="sap-icon://shipping-status" />
                    </TileContent>
                </GenericTile>


            </FlexBox>
            </VBox>

            <endButton>
                <Button text="Close" press=".onCloseChannelDialog" />
            </endButton>
        </Dialog>

    </core:FragmentDefinition>
