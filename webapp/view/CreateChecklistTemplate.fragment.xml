<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    xmlns:l="sap.ui.layout">

    <Dialog title="ðŸ“‹ Create Checklist Template" contentWidth="900px" contentHeight="750px" resizable="true" draggable="true">

        <customHeader>
            <Bar>
                <contentLeft>
                    <VBox>
                        <Title text="ðŸ“‹ Create Checklist Template" level="H2"/>
                        <!-- <Text text="Define inspection items for pre-trip vehicle checks" class="sapUiTinyText"/> -->
                    </VBox>
                </contentLeft>
                <contentRight>
                    <Button icon="sap-icon://decline" press="onCloseDialog"/>
