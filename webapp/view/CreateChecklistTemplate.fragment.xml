                                            <core:Icon src="sap-icon://menu2" class="sapUiSmallMarginEnd" color="#6A6D70"/>
                                            <Text text="Fire extinguisher (valid)"/>
                                        </HBox>
                                        <HBox>
                                            <Button text="Yes/No" type="Transparent" class="sapUiSmallMarginEnd"/>
                                            <Button text="Required" type="Reject" class="sapUiSmallMarginEnd"/>
                                            <Button icon="sap-icon://camera" type="Transparent" tooltip="Photo required" class="sapUiSmallMarginEnd"/>

                                            <Button icon="sap-icon://delete" type="Transparent" press="onDeleteCheckItem"/>
                                        </HBox>
                                    </HBox>

                                    <HBox justifyContent="SpaceBetween" alignItems="Center" class="sapUiTinyMarginBottom">
                                        <HBox alignItems="Center" width="40%">
                                            <core:Icon src="sap-icon://menu2" class="sapUiSmallMarginEnd" color="#6A6D70"/>
                                            <Text text="First aid kit"/>
                                        </HBox>
                                        <HBox>
                                            <Button text="Yes/No" type="Transparent" class="sapUiSmallMarginEnd"/>
                                            <Button text="Required" type="Reject" class="sapUiSmallMarginEnd"/>

                                            <Button icon="sap-icon://delete" type="Transparent" press="onDeleteCheckItem"/>
                                        </HBox>
                                    </HBox>

                                    <HBox justifyContent="SpaceBetween" alignItems="Center" class="sapUiTinyMarginBottom">
                                        <HBox alignItems="Center" width="40%">
                                            <core:Icon src="sap-icon://menu2" class="sapUiSmallMarginEnd" color="#6A6D70"/>
                                            <Text text="Reflective triangles"/>
                                        </HBox>
                                        <HBox>
                                            <Button text="Yes/No" type="Transparent" class="sapUiSmallMarginEnd"/>
                                            <Button text="Required" type="Reject" class="sapUiSmallMarginEnd"/>

                                            <Button icon="sap-icon://delete" type="Transparent" press="onDeleteCheckItem"/>
                                        </HBox>
                                    </HBox>

                                    <HBox justifyContent="SpaceBetween" alignItems="Center" class="sapUiTinyMarginBottom">
