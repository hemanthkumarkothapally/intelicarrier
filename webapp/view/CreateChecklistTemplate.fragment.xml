                            <headerToolbar>
                                <OverflowToolbar>
                                    <Title text="ðŸ“„ Documents"/>
                                    <ToolbarSpacer/>
                                    <Label text="4" design="Bold"/>
                                </OverflowToolbar>
                            </headerToolbar>
                            <content>
                                <VBox class="sapUiSmallMarginEnd" >
                                    <HBox justifyContent="SpaceBetween" alignItems="Center" class="sapUiTinyMarginBottom sapUiTinyMarginTop">
                                        <HBox alignItems="Center" width="40%">
                                            <core:Icon src="sap-icon://menu2" class="sapUiSmallMarginEnd" color="#6A6D70"/>
                                            <Text text="Driver's license"/>
                                        </HBox>
                                        <HBox>
                                            <Button text="Yes/No" type="Transparent" class="sapUiSmallMarginEnd"/>
                                            <Button text="Required" type="Reject" class="sapUiSmallMarginEnd"/>

                                            <Button icon="sap-icon://delete" type="Transparent" press="onDeleteCheckItem"/>
                                        </HBox>
                                    </HBox>

