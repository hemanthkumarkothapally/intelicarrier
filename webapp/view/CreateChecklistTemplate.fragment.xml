            </Bar>
        </customHeader>

        <content>
            <ScrollContainer height="100%" width="100%" vertical="true">
                <VBox class="sapUiSmallMargin">

                    <!-- Template Basic Info -->
                    <l:Grid defaultSpan="L6 M12 S12" class="sapUiSmallMarginBottom">
                        <VBox class="sapUiTinyMargin">
                            <Label text="Template Name" required="true" class="sapUiTinyMarginBottom"/>
                            <Input value="{templateModel>/templateName}" placeholder="e.g., LPG Tanker Pre-Trip Checklist"/>
                        </VBox>

                        <VBox class="sapUiTinyMargin">
                            <Label text="Template Code" required="true" class="sapUiTinyMarginBottom"/>
                            <Input value="{templateModel>/templateCode}" placeholder="e.g., CHK-LPG-001" class="sapUiSmallMarginEnd"/>
                        </VBox>
                    </l:Grid>

                    <!-- Assign to Product Types -->
                    <VBox class="sapUiSmallMarginBottom sapUiSmallMarginEnd">
                        <Label text="Assign to Product Types" required="true" class="sapUiTinyMarginBottom"/>
                        <l:Grid defaultSpan="L4 M6 S12">
                            <SegmentedButton selectedKey="{templateModel>/productType}">
                                <items>
                                    <SegmentedButtonItem key="lpg" icon="sap-icon://energy-saving-lightbulb" text="ðŸ”¥ LPG"/>
                                    <SegmentedButtonItem key="fuel" icon="sap-icon://heating-cooling" text="â›½ Fuel"/>
                                    <SegmentedButtonItem key="ngv" icon="sap-icon://cart" text="ðŸŒ¿ NGV"/>
                                    <SegmentedButtonItem key="chemical" icon="sap-icon://nutrition-activity" text="ðŸ§ª Chemical"/>
                                    <SegmentedButtonItem key="container" icon="sap-icon://cargo-train" text="ðŸ“¦ Container"/>
                                </items>
                            </SegmentedButton>
                        </l:Grid>
                    </VBox>

                    <!-- Checklist Items by Category -->
                    <VBox class="sapUiMediumMarginTop sapUiSmallMarginEnd">
                        <HBox alignItems="Center" class="sapUiSmallMarginBottom">
                            <core:Icon src="sap-icon://checklist-item" class="sapUiSmallMarginEnd"/>
                            <Title text="Checklist Items by Category" level="H4"/>
                        </HBox>

                        <!-- Exterior Inspection Category -->
                        <Panel headerText="ðŸš— Exterior Inspection" expandable="true" expanded="true" class="sapUiSmallMarginBottom">
                            <headerToolbar>
                                <OverflowToolbar>
                                    <Title text="ðŸš— Exterior Inspection"/>
                                    <ToolbarSpacer/>
                                    <Label text="6" design="Bold"/>
                                </OverflowToolbar>
                            </headerToolbar>
                            <content>
                                <VBox class="sapUiSmallMarginEnd">
                                    <!-- Check Items -->
                                    <HBox justifyContent="SpaceBetween" alignItems="Center" class="sapUiTinyMarginBottom sapUiTinyMarginTop">
                                        <HBox alignItems="Center" width="40%">
                                            <core:Icon src="sap-icon://menu2" class="sapUiSmallMarginEnd" color="#6A6D70"/>
                                            <Text text="Tire condition &amp; pressure"/>
                                        </HBox>
                                        <HBox>
                                            <Button text="Yes/No" type="Transparent" class="sapUiSmallMarginEnd"/>
                                            <Button text="Required" type="Reject" class="sapUiSmallMarginEnd"/>
                                            <Button icon="sap-icon://camera" type="Transparent" tooltip="Photo required" class="sapUiSmallMarginEnd"/>
                                            <Button icon="sap-icon://edit" type="Transparent" press="onEditCheckItem" class="sapUiSmallMarginEnd"/>
                                            <Button icon="sap-icon://delete" type="Transparent" press="onDeleteCheckItem"/>
                                        </HBox>
                                    </HBox>

                                    <HBox justifyContent="SpaceBetween" alignItems="Center" class="sapUiTinyMarginBottom">
                                        <HBox alignItems="Center" width="40%">
                                            <core:Icon src="sap-icon://menu2" class="sapUiSmallMarginEnd" color="#6A6D70"/>
                                            <Text text="Headlights &amp; tail lights"/>
                                        </HBox>
                                        <HBox>
                                            <Button text="Yes/No" type="Transparent" class="sapUiSmallMarginEnd"/>
                                            <Button text="Required" type="Reject" class="sapUiSmallMarginEnd"/>
                                            <Button icon="sap-icon://edit" type="Transparent" press="onEditCheckItem" class="sapUiSmallMarginEnd"/>
                                            <Button icon="sap-icon://delete" type="Transparent" press="onDeleteCheckItem"/>
                                        </HBox>
                                    </HBox>

                                    <HBox justifyContent="SpaceBetween" alignItems="Center" class="sapUiTinyMarginBottom">
                                        <HBox alignItems="Center" width="40%">
                                            <core:Icon src="sap-icon://menu2" class="sapUiSmallMarginEnd" color="#6A6D70"/>
                                            <Text text="Turn signals &amp; hazard lights"/>
                                        </HBox>
                                        <HBox>
                                            <Button text="Yes/No" type="Transparent" class="sapUiSmallMarginEnd"/>
                                            <Button text="Required" type="Reject" class="sapUiSmallMarginEnd"/>
                                            <Button icon="sap-icon://edit" type="Transparent" press="onEditCheckItem" class="sapUiSmallMarginEnd"/>
                                            <Button icon="sap-icon://delete" type="Transparent" press="onDeleteCheckItem"/>
                                        </HBox>
                                    </HBox>

                                    <HBox justifyContent="SpaceBetween" alignItems="Center" class="sapUiTinyMarginBottom">
