<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form">
    
    <Dialog
        title="Add Tracking Event"
        contentWidth="500px"
        contentHeight="auto">
        
        <content>
            <f:SimpleForm
                id="trackingForm"
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanXL="4"
                labelSpanL="4"
                labelSpanM="4"
                labelSpanS="12"
                adjustLabelSpan="false"
                emptySpanXL="0"
                emptySpanL="0"
                emptySpanM="0"
                emptySpanS="0"
                columnsXL="1"
                columnsL="1"
                columnsM="1"
                singleContainerFullSize="false">
                
                <f:content>
                    <!-- Status Section -->
                    <Label text="Tracking Status" required="true"/>
                  <ComboBox
                        id="statusComboBox"
                        selectedKey="{trackingModel>/newEvent/status}"
                        placeholder="Select or type status..."
                        selectionChange="onStatusChange">
                        <items>
                            <core:Item key="pickup" text="Package Picked Up"/>
                            <core:Item key="intransit" text="Departed Facility"/>
                            <core:Item key="processing" text="Hub Processing"/>
                            <core:Item key="outfordelivery" text="Out for Delivery"/>
                            <core:Item key="delivered" text="Delivered"/>
                        </items>
                    </ComboBox>
                    
                    <Label text="Status Description" required="true"/>
                    <Input
                        id="statusDescription"
                        value="{trackingModel>/newEvent/statusText}"
                        placeholder="e.g., Package Picked Up"/>
                    
                    <!-- Date and Time Section -->
                    <Label text="Date" required="true"/>
                    <DatePicker
                        id="eventDate"
                        value="{trackingModel>/newEvent/date}"
                        valueFormat="MMM dd, yyyy"
                        displayFormat="MMM dd, yyyy"
                        placeholder="Select Date"/>
                    
                    <Label text="Time" required="true"/>
                    <TimePicker
                        id="eventTime"
                        value="{trackingModel>/newEvent/time}"
                        valueFormat="hh:mm a"
                        displayFormat="hh:mm a"
                        placeholder="Select Time"/>
                    
                    <!-- Location Section -->
                    <Label text="Location" required="true"/>
                    <Input
                        id="locationInput"
                        value="{trackingModel>/newEvent/location}"
                        placeholder="e.g., San Francisco, CA"/>
                    
                    <Label text="Additional Notes"/>
                    <TextArea
                        id="notesInput"
                        value="{trackingModel>/newEvent/notes}"
                        rows="3"
                        placeholder="e.g., Package collected from sender"
                        width="100%"/>
                    
                </f:content>
            </f:SimpleForm>
        </content>
        
        <beginButton>
            <Button text="Add Event" type="Emphasized" press="onAddEvent"/>
        </beginButton>
        
        <endButton>
            <Button text="Cancel" press="onCancelUpdate"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>