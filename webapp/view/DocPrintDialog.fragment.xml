<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form">

    <Dialog
        id="docPrintDialog"
        contentWidth="980px"
        contentHeight="720px"
        title="Print Shipping Documents"
        draggable="true"
        resizable="true"
        verticalScrolling="true"
        class="sapUiResponsivePadding--content docPrintDialog">


        <!-- ================= CONTENT ================= -->
        <content>
            <VBox class="sapUiSmallMargin">

                <!-- ============ Shipment Summary Card ============ -->
                <VBox class="shipmentSummaryCard sapUiSmallMarginBottom">

                    <!-- mini cards row -->
                    <HBox class="sapUiSmallMarginTop" justifyContent="SpaceBetween" width="100%">
                        <VBox class="miniInfoCard">
                            <Text text="ORIGIN" class="miniLabel"/>
                            <Text text="{docModel>/origin}" class="miniValue"/>
                        </VBox>

                        <VBox class="miniInfoCard">
                            <Text text="DESTINATION" class="miniLabel"/>
                            <Text text="{docModel>/destination}" class="miniValue"/>
                        </VBox>

                        <VBox class="miniInfoCard">
                            <Text text="VEHICLE / CARRIER" class="miniLabel"/>
                            <Text text="{docModel>/vehicle}" class="miniValue" wrapping="true"/>
                        </VBox>

                        <VBox class="miniInfoCard">
                            <Text text="DRIVER" class="miniLabel"/>
                            <Text text="{docModel>/driver}" class="miniValue"/>
                        </VBox>
                    </HBox>

                </VBox>

                <!-- ============ Document Select Title ============ -->
                <HBox alignItems="Center" class="sapUiSmallMarginBottom">
                    <core:Icon src="sap-icon://document-text" class="sapUiTinyMarginEnd"/>
                    <Title text="Select Documents to Print" level="H5"/>
                </HBox>

                <!-- ============ Document Cards Grid ============ -->
          <FlexBox wrap="Wrap" width="100%" class="sapUiSmallMarginBottom">

    <!-- Bill of Lading -->
    <GenericTile
        width="20rem"
        class="docTile selected sapUiSmallMargin"
        press=".onDocSelect"
        header="Bill of Lading (BOL)"
        subheader="Legal transport document">

        <TileContent>
            <VBox alignItems="Center" class="sapUiSmallMarginTop">
                <core:Icon src="sap-icon://clipboard" size="2.2rem" />
                <Text text="âœ“ Required" class="docMetaRequired sapUiSmallMarginTop"/>
            </VBox>
        </TileContent>
    </GenericTile>

    <!-- Shipping Labels -->
    <GenericTile
        width="20rem"
        class="docTile selected sapUiSmallMargin"
        press=".onDocSelect"
        header="Shipping Labels"
        subheader="Package identification">

        <TileContent>
            <VBox alignItems="Center" class="sapUiSmallMarginTop">
                <core:Icon src="sap-icon://tag" size="2.2rem"/>
                <Text text="3 labels" class="docMetaRequired sapUiSmallMarginTop"/>
            </VBox>
        </TileContent>
    </GenericTile>

    <!-- Delivery Order -->
    <GenericTile
        width="20rem"
        class="docTile sapUiSmallMargin"
        press=".onDocSelect"
        header="Delivery Order (DO)"
        subheader="Proof of delivery">

        <TileContent>
            <VBox alignItems="Center" class="sapUiSmallMarginTop">
                <core:Icon src="sap-icon://shipping-status" size="2.2rem"/>
                <Text text="1 copy" class="docMeta sapUiSmallMarginTop"/>
            </VBox>
        </TileContent>
    </GenericTile>

    <!-- Packing List -->
    <GenericTile
        width="20rem"
        class="docTile sapUiSmallMargin"
        press=".onDocSelect"
        header="Packing List"
        subheader="Contents detail">

        <TileContent>
            <VBox alignItems="Center" class="sapUiSmallMarginTop">
                <core:Icon src="sap-icon://edit" size="2.2rem"/>
                <Text text="1 copy" class="docMeta sapUiSmallMarginTop"/>
            </VBox>
        </TileContent>
    </GenericTile>

    <!-- Driver Checklist -->
    <GenericTile
        width="20rem"
        class="docTile sapUiSmallMargin"
        press=".onDocSelect"
        header="Driver Checklist"
        subheader="Handover verification">

        <TileContent>
            <VBox alignItems="Center" class="sapUiSmallMarginTop">
                <core:Icon src="sap-icon://complete" size="2.2rem"/>
                <Text text="1 copy" class="docMeta sapUiSmallMarginTop"/>
            </VBox>
        </TileContent>
    </GenericTile>

</FlexBox>


                <!-- ============ Print Options ============ -->
                <VBox class="printOptionsCard sapUiSmallMarginBottom">
                    <HBox alignItems="Center" class="sapUiSmallMarginBottom">
                        <core:Icon src="sap-icon://action-settings" class="sapUiTinyMarginEnd"/>
                        <Title text="Print Options" level="H5"/>
                    </HBox>

                    <HBox wrap="Wrap" alignItems="Center">

                        <HBox class="sapUiSmallMarginEnd" alignItems="Center">
                            <Text text="Copies:" class="sapUiTinyMarginEnd"/>
                            <Select width="70px" selectedKey="2">
                                <items>
                                    <core:Item key="1" text="1"/>
                                    <core:Item key="2" text="2"/>
                                    <core:Item key="3" text="3"/>
                                </items>
                            </Select>
                        </HBox>

                        <HBox class="sapUiSmallMarginEnd" alignItems="Center">
                            <Text text="Printer:" class="sapUiTinyMarginEnd"/>
                            <Select width="180px" selectedKey="office-main">
                                <items>
                                    <core:Item key="office-main" text="Office Main Printer"/>
                                    <core:Item key="warehouse-1" text="Warehouse Printer 1"/>
                                    <core:Item key="label-printer" text="Label Printer (Zebra)"/>
                                </items>
                            </Select>
                        </HBox>

                        <CheckBox text="Include Barcodes" selected="true" class="sapUiSmallMarginEnd"/>
                        <CheckBox text="Include QR Code" selected="true"/>

                    </HBox>
                </VBox>

                <!-- ============ Preview Section ============ -->
                <Panel class="previewPanel" backgroundDesign="Solid">
                    <VBox>

                        <HBox justifyContent="SpaceBetween" alignItems="Center" class="sapUiSmallMargin">

                            <SegmentedButton selectedKey="BOL">
                                <items>
                                    <SegmentedButtonItem key="BOL" text="BOL"/>
                                    <SegmentedButtonItem key="LABEL" text="Label"/>
                                    <SegmentedButtonItem key="DO" text="Delivery Note"/>
                                </items>
                            </SegmentedButton>

                            <Button text="Download PDF"
                                    icon="sap-icon://download"
                                    type="Transparent"
                                    press=".onDownloadPDF"/>
                        </HBox>

                        <!-- Preview Box -->
                        <VBox class="previewBox sapUiSmallMargin">
                            <HBox justifyContent="Center" class="sapUiSmallMarginTop">
                                <Title text="IntelliCarrier" level="H3"/>
                            </HBox>
                            <HBox justifyContent="Center">
                                <Text text="Bill of Lading (Preview Area)" class="sapUiContentLabel"/>
                            </HBox>
                            <HBox justifyContent="Center">
                            <Image src="model/image.png" />
                            </HBox>
                        </VBox>

                    </VBox>
                </Panel>

            </VBox>
        </content>

        <!-- ================= FOOTER ================= -->
        <buttons>
            <Button text="Cancel" press=".onCloseDocPrintDialog"/>
            <Button text="Preview All" icon="sap-icon://show" type="Emphasized" press=".onCloseDocPrintDialog"/>
            <Button text="Print Documents" icon="sap-icon://print" type="Accept" press=".onCloseDocPrintDialog"/>
        </buttons>

    </Dialog>
</core:FragmentDefinition>
