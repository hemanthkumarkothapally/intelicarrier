<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">

    <Dialog
        id="openDocDialog"
        title="Document Preview"
        contentWidth="60%"
        contentHeight="70%"
        stretchOnPhone="true">

        <content>
            <VBox alignItems="Center" justifyContent="Center" width="100%">
                <Image
                    src="/img/docu.jpeg"
                    width="100%"
                    densityAware="false"/>
            </VBox>
        </content>

        <endButton>
            <Button text="Close" press=".onCloseDocDialog"/>
        </endButton>
    </Dialog>

</core:FragmentDefinition>
